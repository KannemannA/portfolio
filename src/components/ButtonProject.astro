---
interface Props {
    className?: string,
    href?: string
}
const {className, href} = Astro.props;
---

<a href={href || "#top"} class=`no-underline inline-flex animate-background-shine items-center justify-center rounded-xl border border-gray-800 bg-[linear-gradient(110deg,#000103,45%,#1e2631,55%,#000103)] bg-[length:200%_100%] px-3 font-medium text-gray-300 transition-colors hover:outline-none hover:ring-2 hover:ring-gray-700 hover:ring-offset-2 hover:ring-offset-gray-50 text-sm ${className}`>
    <slot />
</a>