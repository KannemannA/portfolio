---
interface Props {
    className?: string,
    href?: string,
    target?: string
}
const {className, href, target} = Astro.props;
---

<a href={href || "#top"} class=`no-underline inline-flex shineAnimation items-center justify-center rounded-xl border border-gray-800 bg-[length:200%_100%] px-3 font-medium text-gray-300 transition-colors hover:outline-none hover:ring-2 hover:ring-gray-700 hover:ring-offset-2 hover:ring-offset-gray-50 text-sm ${className}` target={target || "_blank"}>
    <slot />
</a>

<style>
@keyframes backgroundShine {
    0%, 30% {
        background-position: 150% 0;
    }
    70%, 100% {
        background-position: -150% 0;
    }
}

@keyframes shineOverlay {
    0% {
        left: -100%;
    }
    50% {
        left: 200%;
    }
    100% {
        left: 200%;
    }
}

.shineAnimation {
    background: linear-gradient(
        110deg,
        #000000 25%,
        #64748b 50%,
        #000000 75%
    );
    background-size: 300% 100%;
    animation: backgroundShine 5s ease-in-out infinite;
    position: relative;
    overflow: hidden;
}

.shineAnimation::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(
        to right,
        rgba(255,255,255,0) 0%,
        rgba(255,255,255,0.4) 50%,
        rgba(255,255,255,0) 100%
    );
    animation: shineOverlay 5s ease-in-out infinite;
    transform: skewX(-20deg);
}
</style>